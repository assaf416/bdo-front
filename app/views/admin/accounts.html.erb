<div class="row">
  <div class="col-lg-12">
  </div>
</div>

<div class="row">
  <div class="col-lg-12">

    <div class="card">
      <div class="card-header">
         רשימת החשבונות
      </div>
      <div class="card-body">
    <table class="table table-hover datatable">
        <thead>
          <tr>
            <th>חשבון</th>
            <th>מייל</th>
            <th>טלפון</th>
            <th>קרן השקעה</th>
            <th>סכום השקעה</th>
            <th>נפתח בתאריך</th>
            <th>מסמכים שמולאו</th>
            <th>חוזים שמולאו</th>
            <th width="50px"></th>
          </tr>
        </thead>
        <tbody>
            <% 10.times do %>
            <tr>
                <td><%= link_to Faker::Name.name  , "/admin/account" %> </td>
                <td><%= Faker::Internet.email  %> </td>
                <td><%=Faker::PhoneNumber.phone_number  %> </td>
                <td><%=["אטלס","פיתגורס","אלפה נגלן"].sample(1)[0] %> </td>
                <td><%=["400,000","200,000","140,000"].sample(1)[0] %> </td>
                <td><%=(Time.now - rand(30).days).strftime("%Y-%m-%d") %> </td>
                <td><%=rand(4) %> / 4 </td>
                <td><%=rand(6) %> / 6 </td>
                <td class="text-right">
               <div class="ms-auto my-auto text-right">
                    <div class="btn-group">
                        <button type="button" class="btn btn-secondary btn-icon dropdown-toggle show" data-bs-toggle="dropdown" aria-expanded="true">
                            <i class="ph-list"></i>
                        </button>
                        <div class="dropdown-menu dropdown-menu-end " style="position: absolute; inset: 0px 0px auto auto; margin: 0px; transform: translate3d(-0.5px, 40px, 0px);" data-popper-placement="bottom-end">
                            <a href="#" class="dropdown-item">
                                <i class="fas fa-lock"></i>
                                &nbsp;
                                חסימת חשבון</a>
                            <a href="#" class="dropdown-item">
                                <i class="fas fa-pencil"></i>
                                &nbsp;
                                עדכון חשבון</a>
                            <div class="dropdown-divider"></div>
                            <a href="#" class="dropdown-item">
                                <i class="fas fa-envelope"></i>
                                &nbsp;
                                מייל ידני</a>
                        </div>
                    </div>
                </div>
            </td>
            </tr>
          <% end %>
        </tbody>
      </table>
       </div>
      <div class="card-footer">
        Footer
      </div>
    </div>
    
  </div>
</div>