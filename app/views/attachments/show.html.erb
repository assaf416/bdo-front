<p style="color: green"><%= notice %></p>

<%= render @attachment %>

<div>
  <%= link_to "Edit this attachment", edit_attachment_path(@attachment) %> |
  <%= link_to "Back to attachments", attachments_path %>

  <%= button_to "Destroy this attachment", @attachment, method: :delete %>
  
  <% if @attachment.file.attached?%>
  <hr/>

  <% if @attachment.file.previewable? %>
        <%= image_tag @attachment.file.preview(resize_to_limit: [100, 100]) %>
      <% else%>
        <%= image_tag @attachment.file %>
    <% end %>

  <% end %>
</div>
